<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pushactivities.RoutesPublishActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/add_picture"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/edit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="图片介绍"/>

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/add_picture"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/edit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="图片介绍" />

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/add_picture"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/edit_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="图片介绍" />

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/add_picture"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/edit_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="图片介绍" />



        <EditText
            android:id="@+id/edit_scenic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="景点名称"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_label_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/edit_label_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edit_routes_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="路线梗概"/>

        <EditText
            android:id="@+id/edit_routes_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="第一条路线"/>

        <EditText
            android:id="@+id/edit_routes_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="第二条路线"/>

        <ImageView
            android:id="@+id/image_5"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/add_picture"
            android:scaleType="fitXY" />

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:gravity="center"
            android:textSize="20sp"
            android:text=" 发布 "/>

    </LinearLayout>

</ScrollView>
